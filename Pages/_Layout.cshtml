<script src="https://cdnjs.cloudflare.com/ajax/libs/quagga/0.12.1/quagga.min.js"></script>
<script>
    function startQuagga() {
        Quagga.init({
            inputStream: {
                name: "Live",
                type: "LiveStream",
                constraints: {
                    width: 640,
                    height: 400,
                    facingMode: "environment" // Use the back camera on phones
                },
                target: document.querySelector('#barcode-scanner')
            },
            decoder: {
                readers: ["ean_reader", "code_128_reader", "upc_reader"] // You can add more barcode formats here if needed
            }
        }, function (err) {
            if (err) {
                console.error(err);
                return;
            }
            Quagga.start();
        });

        Quagga.onDetected(function (result) {
            if (result && result.codeResult && result.codeResult.code) {
                let barcode = result.codeResult.code;
                console.log("Barcode detected and processed: ", barcode);

                // Pass the barcode value to Blazor through JSInterop
                DotNet.invokeMethodAsync('RoughDraftInventoryManagmentSystem', 'HandleScannedBarcode', barcode);
                Quagga.stop(); // Stop scanning after a successful detection
            }
        });
    }

function stopQuagga() {
    if (Quagga) {
        try {
            // Stops the video stream and scanner if initialized
            Quagga.stop();
            // Remove the camera view by clearing the content of the element
            let scannerContainer = document.querySelector("#barcode-scanner");
            if (scannerContainer) {
                scannerContainer.innerHTML = ""; // This will remove the video element and other children added by Quagga
            }
        } catch (err) {
            console.error("Error while stopping Quagga:", err);
        }
    }
}


</script>






